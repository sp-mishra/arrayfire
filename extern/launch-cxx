#!/bin/sh

# Xcode generator doesn't include the compiler as the
# first argument, Ninja and Makefiles do. Handle both cases.
if [ "$1" = "/Library/Developer/CommandLineTools/usr/bin/c++" ] ; then
    shift
fi

export CCACHE_CPP2=true
exec "/opt/homebrew/bin/ccache" "/Library/Developer/CommandLineTools/usr/bin/c++" "$@"
